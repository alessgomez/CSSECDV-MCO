<html>
    <head>
		<title>The Hungry Sibs</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        
    <link rel="stylesheet" type="text/css" media="all" href="css/forms.css"/>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script type="text/javascript" src="js/login.js"></script>
    </head>

    <body>
        <div class="split left">
            <div class="centered">
              <img src="images/logo.png">
              <h1 id="welcome">Welcome Back!</h1>
              <p id="description">Enter your login details to start ordering.</p>
            </div>
          </div>
          
          <div class="split right">
              <div class="container">
                <h1 id="header">Login</h1>
                <form action="/verifyAccount" method="post">
                    <label for="email"><b>Email</b></label><br>
                    <input type="email" placeholder="Enter Email" id="email" name="email" required>

                    <div class="break"></div>

                    <label for="psw"><b>Password</b></label><br>
                    <input type="password" id="psw" placeholder="Enter Password" name="psw" required><br>
                    <div class="break"></div>

                    <div class="g-recaptcha" data-callback="toggleSubmitButton" data-expired-callback="recaptchaExpiredCallback" data-sitekey="{{siteKey}}"></div><br>
                    
                    <div class="break"></div>

                    <!-- Flash message rendered as HTML -->
                    <p id="error">{{{error_msg}}}</p>
                    <p id="success">{{success_msg}}</p>

                    <button type="submit" id="signin-submit" disabled><strong>Log In</strong></button>
                    
                    <p>Don't have an account? <a href="/register">Register</a></p>
                </form>
            </div>
          </div>
    </body>
</html>