<div class="details-content">
    <p class="det-header">My Profile</p>
    <hr class="line-break">
    <div class="break2"></div>

    <form action="/updateAccount" method="post">
        <div class="field">
            <p class="field-name">Profile Picture</p>
            <img src="/uploads/{{accountDetails.profilePicFilename}}" alt="Profile Picture" class="profilePic" id="profPic"/>
            <input type="file" id="inputFile" name="inputFile" accept="image/jpeg, image/png, image/jpg" class="inputDetails hide">
        </div>
        <div class="field">
            <p class="field-name">First Name</p>
            <p class="field-value" id="firstName">{{accountDetails.firstName}}</p>
        </div>
        <div class="break2"></div>
        <div class="field">
            <p class="field-name">Last Name</p>
            <p class="field-value" id="lastName">{{accountDetails.lastName}}</p>
        </div>
        <div class="break2"></div>
        <div class="field">
            <p class="field-name">Email</p>
            <p class="field-value" id="email">{{accountDetails.email}}</p>
        </div>
        <div class="field">
            <p class="field-name">Contact Number</p>
            <p class="field-value" id="phoneNumber">{{accountDetails.phoneNumber}}</p>
        </div>
        <div class="break2"></div>
        <p id="error">{{error_msg}}</p>
        <div class="break2"></div>
        <div class="buttons">
            <button type="button" class="btn" id="update"><strong>Update Details</strong></button>
            <button type="submit" class="btn hide" id="save" disabled><strong>Save Changes</strong></button>
            <button type="button" class="btn" id="changepw"><strong>Change Password</strong></button>
        </div>
    </form>
</div>